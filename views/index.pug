extends layout

block content
  h1= title
  
  p Generate web pages on the server side #{title}
  button(type="button" onclick="doBump()") Press me

  div(id="bump") Bump the count 


  script(type='text/javascript').
    var count = 0;
    var bump = 1;
    function doBump()
    {
    count=count+bump;
    bump= bump+1;
    document.getElementById("bump").innerHTML=`Count ${count} with bump ${bump}`;
    };
  a(href=`brand`) brand